<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Общий предок текстовых стилей-->
    <style name="text_generic">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Текст в приложении -->
    <style name="app_text" parent="text_generic">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Текст в тулбаре -->
    <style name="toolbar_text" parent="text_generic">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="android:gravity">right|end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Текст виджета -->
    <style name="widget_text" parent="text_generic">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

    <style name="widget_text_today" parent="widget_text">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingRight">0dp</item>
    </style>


</resources>