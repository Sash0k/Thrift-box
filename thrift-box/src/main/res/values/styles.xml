<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!-- цвета темы -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- убрать стандартный ActionBar -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- ? -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="MyTextAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Стиль кнопки на виртуальной клавиатуре -->
    <style name="VirtualKeyboardButton">
        <item name="android:background">@drawable/key_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:onClick">virtualKeyboardClick</item>
    </style>

    <!-- Красная кнопка -->
    <style name="button_red">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:background">@drawable/enter_button</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Текст в тулбаре -->
    <style name="toolbar_text">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textColorHint">@color/primary_light</item>
        <item name="android:gravity">right|end</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
    </style>

    <!-- Текст в приложении -->
    <style name="app_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Текст виджета -->
    <style name="widget_text" >
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="widget_text_today" parent="widget_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="PadButtonStyle" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="PadLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>
